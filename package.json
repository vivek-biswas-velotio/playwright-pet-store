{
  "name": "petstore-playwright-tests",
  "version": "1.0.0",
  "description": "Playwright testing framework for Swagger Petstore API",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:api": "npx playwright test tests/api/",
    "test:e2e": "npx playwright test tests/e2e/",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:report": "npx playwright show-report",
    "test:ui": "npx playwright test --ui"
  },
  "keywords": [
    "playwright",
    "api-testing",
    "e2e-testing",
    "swagger",
    "petstore"
  ],
  "author": "Developer",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
